[ req ]
default_bits       = 2048
prompt             = no
default_md         = sha256
distinguished_name = dn
req_extensions     = v3_req          # CSR에 포함할 확장(extensions for CSR)
# x509_extensions  = v3_server       # (참고) self-signed cert 만들 때 쓸 확장

[ dn ]
C  = KR
ST = Seoul
L  = Seoul
O  = BrainBuddy
CN = brainbuddy_local

# CSR에 넣을 확장 (keyUsage/EKU/SAN 등)
[v3_req]
keyUsage = critical, digitalSignature, keyEncipherment
extendedKeyUsage = serverAuth
subjectAltName = @alt_names

# 최종 "서버 인증서"에 적용할 확장 (보통 v3_req와 동일)
[v3_server]
basicConstraints = critical, CA:FALSE
keyUsage = critical, digitalSignature, keyEncipherment
extendedKeyUsage = serverAuth
subjectAltName = @alt_names

[alt_names]
DNS.1 = localhost
# DNS.2 = www.brainbuddy.com
# DNS.3 = brainbuddy.com
# 로컬/사설 IP
IP.1 = 127.0.0.1
IP.2 = 10.221.251.81
IP.3 = 10.221.251.80
IP.4 = 192.168.0.15
